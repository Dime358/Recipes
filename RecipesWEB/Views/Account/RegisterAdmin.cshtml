@using RecipesWEB.Models
@model RecipesWEB.Models.RegisterViewModelAdmin
@{
    ViewBag.Title = "Register";
}


<div class="row">
    <div class="col-md-offset-3 col-md-6 ">
        <div class="card createBackgroundColor" >
            @using (Html.BeginForm("RegisterAdmin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                <h3 class="text-center">Креирајте нов профил</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger"  })
                <div class="form-group">
                    <label for="Email" class="col-md-3 control-label">Email</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "height:5px" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" class="col-md-3 control-label">Корисничко име</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = "height:5px" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-md-3 control-label">Лозинка</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "height:5px" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword" class="col-md-3 control-label">Потврдете лозинка</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "height:5px" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserRoles" class="col-md-3 control-label">Улога</label>
                    <div class="col-md-8">
                        @*@Html.DropDownList("Name")*@
                        @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ", new { @class = "form-control", @style = "padding:0px" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-success btn-block" value="Креирајте нов корисник" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}  